@model DABugTracker.Models.Project

@{
    ViewData["Title"] = "Create";
}
<!-- Start Content-->
<div class="container-fluid">
    <form asp-action="Create" asp-controller="Projects" method="post" enctype="multipart/form-data">

        <div class="row">
            <h1>Create Project</h1>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body task-detail">
                        <div class="d-block mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Project Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <label asp-for="Description" class="control-label">Project Description</label>
                            <textarea asp-for="Description" class="form-control" rows="14"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-block mb-3">
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label">Start Date</label>
                                <input asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-block mb-3">
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label">End Date</label>
                                <input asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-block mb-3">
                            <div class="form-group">
                                <label asp-for="ProjectPriorityId" class="control-label"></label>
                                <select asp-for="ProjectPriorityId" class="form-select" asp-items="ViewBag.ProjectPriorityId"></select>
                            </div>
                        </div>
                        <div class="d-block mb-3">
                            <div class="form-group">
                                <label asp-for="ImageFormFile" class="control-label">Project Image</label>
                                <input asp-for="ImageFormFile" class="form-control" accept=".png,.jpeg,.jpg,.gif,.svg"
                                       onchange="document.getElementById('projectImage').src = window.URL.createObjectURL(this.files[0])" />
                                <span asp-validation-for="ImageFormFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-block mb-3">
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="">
                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div><!-- end col -->
        </div>
        <!-- end row -->

    </form>
</div> <!-- container -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
